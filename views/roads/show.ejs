<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= road.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= road.title %></h5>
              <p class="card-text"><%= road.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= road.location %></li>
              <li class="list-group-item"><i class="fas fa-star" style="padding-right: 8px"></i><%= road.rating %>/5</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/Roads/<%=road._id%>/edit">Edit</a>
                <form class="d-inline" action="/Roads/<%=road._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                    3 days ago
            </div>
          </div>
          <h2>Leave a Review</h2>
          <form action="/Roads/<%=road._id%>/reviews" method="POST">
            <div class="mb-3">
              <label class="form-label" for="rating">Rating</label>
              <input class="form-range" type="range" min="1" max="6" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
              <label class="form-label" for="body">Review</label>
              <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
            </div>
            <button class="btn btn-success mb-3">Submit</button>
          </form>
    </div>
</div>

   
